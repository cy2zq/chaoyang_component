{
  "include": ["src", "tests", ".dumirc.ts", "*.ts", "docs"],
  "compilerOptions": {
    "strict": false,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["vitest/globals", "jquery"],
    "noImplicitAny": false,
    "noUnusedLocals": false, // 允许未使用的变量
    "noUnusedParameters": false, // 允许未使用的参数
    "strictNullChecks": false, // 关闭严格的 null 检查
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src"],
      "chaoyang_component": ["src"],
      "chaoyang_component/*": ["src/*", "*"]
    }
  }
}
